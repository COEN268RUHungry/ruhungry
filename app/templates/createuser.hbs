<div class="container">
  <form role="form" {{action "createUser" on="submit"}}>
    <div class="form-group">
      <label for="new-name">Name</label>
      <input type="text" class="form-control" id="new-name" placeholder="Enter name" required>
    </div>
    <div class="form-group">
      <label for="new-email">Email:</label>
      <input type="email" class="form-control" id="new-email" placeholder="Enter email" required>
    </div>
    <div class="form-group">
      <label for="new-address">Address:</label>
      <input type="text" class="form-control" id="new-address" placeholder="Enter address">
    </div>
    <div class="form-group">
      <label for="new-zip">Zip code:</label>
      <input type="text" class="form-control" id="new-zip" placeholder="Enter Zip">
    </div>
    <div class="form-group">
      <label for="new-pwd">Password:</label>
      <input type="password" class="form-control" id="new-pwd" placeholder="Enter password" required>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>